// Password Reset Token model for forgot/reset password functionality
model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  otp       String?  // 6-digit OTP for email verification
  email     String?  // Store email for OTP-based reset
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("password_reset_tokens")
}

// Email Verification Token model for OTP-based email verification
model EmailVerificationToken {
  id        String   @id @default(cuid())
  otp       String   // 6-digit OTP
  email     String
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([email])
  @@index([userId])
  @@map("email_verification_tokens")
}

// Refresh Token model for JWT authentication
model RefreshToken {
  id        String   @id
  userId    String
  expiresAt DateTime
  isRevoked Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@map("refresh_tokens")
}

// Share model for tracking post shares
model Share {
  id        String   @id @default(cuid())
  postId    String
  userId    String
  platform  String?  // Optional: track which platform (whatsapp, twitter, etc.)
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
  @@index([userId])
  @@map("shares")
}
